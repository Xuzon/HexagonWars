<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_options"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gamebackground"
    tools:context="psic07.uvigo.teleco.hexagonwars.OptionsActivity"
    android:animationCache="false">

    <TextView
        android:text="Hexagon Wars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/HexagonWars"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Computer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:id="@+id/maquina"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/player"
        android:layout_alignStart="@+id/player" />


    <TextView
        android:text="Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="15dp"
        android:layout_marginTop="43dp"
        android:id="@+id/player"
        android:layout_below="@+id/generales"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/right"
        android:id="@+id/p_b_right"
        android:background="@color/colorPrimaryDark"
        android:layout_alignTop="@+id/p_b_left"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/right"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/c_b_right"
        android:layout_above="@+id/s"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/left"
        android:id="@+id/c_b_left"
        android:background="@color/colorPrimaryDark"
        android:layout_above="@+id/s"
        android:layout_alignStart="@+id/p_b_left" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/left"
        android:id="@+id/p_b_left"
        android:background="@color/colorPrimaryDark"
        android:layout_marginStart="34dp"
        android:layout_alignTop="@+id/player"
        android:layout_toEndOf="@+id/maquina" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Generals"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:layout_marginTop="70dp"
        android:id="@+id/generales"
        android:layout_below="@+id/HexagonWars"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/general_switch"
        android:textOff="No"
        android:textOn="Si"
        android:checked="true"
        android:background="@color/colorPrimaryDark"
        android:layout_marginEnd="33dp"
        android:layout_alignTop="@+id/general"
        android:layout_toStartOf="@+id/c_b_right" />

    <TextView
        android:text="Music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:id="@+id/musica"
        android:layout_below="@+id/general"
        android:layout_alignStart="@+id/general"
        android:layout_marginTop="12dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/musica_switch"
        android:textOff="No"
        android:textOn="Si"
        android:checked="true"
        android:background="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/musica"
        android:layout_alignBottom="@+id/musica"
        android:layout_alignStart="@+id/general_switch" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:ems="10"
        android:id="@+id/s"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/maquina"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Sonido"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:background="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/s"
        android:layout_alignBottom="@+id/s"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="General"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:id="@+id/general"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/s"
        android:layout_alignStart="@+id/maquina" />

</RelativeLayout>
