<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_options"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gamebackground"
    tools:context="psic07.uvigo.teleco.hexagonwars.OptionsActivity"
    android:animationCache="false">

    <TextView
        android:text="Música"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:id="@+id/musica"
        android:layout_below="@+id/general"
        android:layout_alignEnd="@+id/general"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="General"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:id="@+id/general"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/s"
        android:layout_alignStart="@+id/maquina" />

    <TextView
        android:text="Máquina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:id="@+id/maquina"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/player"
        android:layout_alignStart="@+id/player" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:ems="10"
        android:id="@+id/s"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/maquina"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Generales"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:layout_marginTop="64dp"
        android:id="@+id/generales"
        android:layout_below="@+id/HexagonWars"
        android:layout_alignParentStart="true" />

    <Switch

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/musica_switch"
        android:textOff="No"
        android:textOn="Si"
        android:background="@color/colorPrimary"
        android:layout_alignTop="@+id/musica"
        android:layout_alignStart="@+id/general_switch" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:id="@+id/general_switch"
        android:textOff="No"
        android:textOn="Si"
        android:background="@color/colorPrimary"
        android:layout_alignTop="@+id/general"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="-"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="19dp"
        android:id="@+id/m_c_left"
        android:background="@null"
        android:textColor="@color/colorPrimary"
        android:layout_alignBaseline="@+id/maquina"
        android:layout_alignBottom="@+id/maquina"
        android:layout_toEndOf="@+id/maquina" />

    <Button
        android:text="-"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/m_c_right"
        android:background="@null"
        android:textColor="@color/colorPrimary"
        android:layout_alignTop="@+id/m_c_left"
        android:layout_alignStart="@+id/general_switch" />

    <TextView
        android:text="Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="34dp"
        android:layout_marginTop="34dp"
        android:id="@+id/player"
        android:layout_below="@+id/generales"
        android:layout_alignParentStart="true" />

    <Button
        android:text="-"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/p_c_left"
        android:background="@null"
        android:textColor="@color/colorPrimary"
        android:layout_alignTop="@+id/player"
        android:layout_alignStart="@+id/m_c_left" />

    <Button
        android:text="-"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/p_c_left"
        android:layout_alignEnd="@+id/m_c_right"
        android:id="@+id/button8"
        android:background="@null"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:text="Hexagon Wars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/HexagonWars"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Sonido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Sonido"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:background="@color/colorPrimaryDark"
        android:layout_alignTop="@+id/s"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
